{% extends 'base.html.twig' %}

{% block title %}NJ | Articles{% endblock %}

{% block body %}

  <section class="articles">

    {% for article in articles %}
      <article class="uk-comment uk-comment-primary">
        <header class="uk-comment-header uk-grid-medium uk-flex-middle" uk-grid>
          <div class="uk-width-auto">
            <img class="uk-comment-avatar" src="" width="80" height="80" alt="">
          </div>
          <div class="uk-width-expand">
              <h2 class="uk-comment-title-large uk-margin-remove"><a class="uk-link-reset" href="#">{{ article.title }}</a></h2>
              <ul class="uk-comment-meta uk-subnav uk-subnav-divider uk-margin-remove-top">
                  <li><a href="#">Ecrit le {{ article.createdAt | date('d/m/Y') }}</a></li>
                  <li><a href="#">Incivilités</a></li>
              </ul>
          </div>
        </header>
          <div class="content">
            <img src="{{ article.image }}" alt="">
            <p>{{ article.content | raw }}</p>
            <a class="uk-button uk-button-default" href="{{ path('show', {'id' : article.id }) }}">Bouton</a>
            <!-- on lui passe ici l'identifiant de l'article dans le 2ème paramètre de la focntion path de twig pour qu'il le récupère dans la route et donc dans la page de cet article -->
            <hr>
      </article>
    {% endfor %}

  </section>

{% endblock %}
